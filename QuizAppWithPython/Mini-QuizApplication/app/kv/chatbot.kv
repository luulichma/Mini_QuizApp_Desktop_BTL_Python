<ChatbotScreen>:
    name: 'chatbot'

    BoxLayout:
        orientation: 'vertical'
        padding: dp(12)
        spacing: dp(8)

        Label:
            text: 'Trợ lý Quiz App'
            size_hint_y: None
            height: dp(40)
            bold: True

        ScrollView:
            id: messages_scroll
            do_scroll_x: False
            BoxLayout:
                id: messages_container
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(6)

        BoxLayout:
            size_hint_y: None
            height: dp(48)
            spacing: dp(6)

            TextInput:
                id: chat_input
                multiline: False
                hint_text: 'Viết tin nhắn ở đây...'

            Button:
                text: 'Gửi'
                size_hint_x: None
                width: dp(90)
                on_release: root.send_message()
