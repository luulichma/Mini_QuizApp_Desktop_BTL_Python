<RegisterStudentScreen>:
    ScrollView:
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            spacing: 10
            padding: 20

            Label:
                text: "Đăng ký Học sinh"
                font_size: 22
                size_hint_y: None
                height: 40

            TextInput:
                id: fullname
                hint_text: "Họ và tên"
                size_hint_y: None
                height: 40

            TextInput:
                id: dob
                hint_text: "Ngày sinh (dd/mm/yyyy)"
                size_hint_y: None
                height: 40

            TextInput:
                id: address
                hint_text: "Địa chỉ"
                size_hint_y: None
                height: 40

            TextInput:
                id: username
                hint_text: "Tên đăng nhập"
                size_hint_y: None
                height: 40

            TextInput:
                id: password
                hint_text: "Mật khẩu"
                password: True
                size_hint_y: None
                height: 40

            TextInput:
                id: class_name
                hint_text: "Lớp"
                size_hint_y: None
                height: 40

            TextInput:
                id: major
                hint_text: "Ngành học"
                size_hint_y: None
                height: 40

            Button:
                text: "Đăng ký"
                size_hint_y: None
                height: 40
                on_release: root.do_register(fullname.text, dob.text, address.text, username.text, password.text, class_name.text, major.text)

            Button:
                text: "Quay lại"
                size_hint_y: None
                height: 40
                on_release: app.root.current = "register"

            Label:
                id: status
                text: ""
                color: 1, 0, 0, 1
                size_hint_y: None
                height: 40
