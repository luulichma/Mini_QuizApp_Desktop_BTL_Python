<ChangePasswordScreen>:
    name: 'change_password'
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15
        canvas.before:
            Color:
                rgba: 0.15, 0.5, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text: "Đổi mật khẩu"
            font_size: 24
            bold: True
            size_hint_y: 0.1
            color: 1, 1, 1, 1

        TextInput:
            id: old_password
            hint_text: "Mật khẩu cũ"
            password: True
            size_hint_y: None
            height: 40

        TextInput:
            id: new_password
            hint_text: "Mật khẩu mới"
            password: True
            size_hint_y: None
            height: 40

        TextInput:
            id: confirm_new_password
            hint_text: "Xác nhận mật khẩu mới"
            password: True
            size_hint_y: None
            height: 40
        
        Label:
            id: status_label
            text: ""
            color: 1, 0.2, 0.2, 1

        BoxLayout:
            size_hint_y: 0.1
            spacing: 20
            Button:
                text: 'Hủy'
                background_color: 1, 0.3, 0.3, 0.8
                on_release: root.go_back()
            Button:
                id: save_button
                text: 'Lưu thay đổi'
                background_color: 0.2, 0.8, 0.4, 1
                on_release: root.save_password()
