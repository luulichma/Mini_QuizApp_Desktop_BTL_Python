<RegisterTeacherScreen>:
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1  # Light gray background
        Rectangle:
            pos: self.pos
            size: self.size

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(20)
            padding: dp(40)

            Label:
                text: "Tạo tài khoản Giảng viên"
                font_size: "32sp"
                bold: True
                color: 0.1, 0.1, 0.1, 1

            # --- Full Name ---
            TextInput:
                id: fullname
                hint_text: "Họ và tên"
                multiline: False
                size_hint_y: None
                height: dp(60)
                font_size: "18sp"
                padding: [20, 20, 20, 20]

            # --- Teacher ID ---
            TextInput:
                id: teacher_id
                hint_text: "Mã giảng viên"
                multiline: False
                size_hint_y: None
                height: dp(60)
                font_size: "18sp"
                padding: [20, 20, 20, 20]

            # --- Date of Birth ---
            TextInput:
                id: dob
                hint_text: "Ngày sinh (dd/mm/yyyy)"
                multiline: False
                size_hint_y: None
                height: dp(60)
                font_size: "18sp"
                padding: [20, 20, 20, 20]

            # --- Address ---
            TextInput:
                id: address
                hint_text: "Địa chỉ"
                multiline: False
                size_hint_y: None
                height: dp(60)
                font_size: "18sp"
                padding: [20, 20, 20, 20]

            # --- Username ---
            TextInput:
                id: username
                hint_text: "Tên đăng nhập"
                multiline: False
                size_hint_y: None
                height: dp(60)
                font_size: "18sp"
                padding: [20, 20, 20, 20]

            # --- Password ---
            TextInput:
                id: password
                hint_text: "Mật khẩu"
                password: True
                multiline: False
                size_hint_y: None
                height: dp(60)
                font_size: "18sp"
                padding: [20, 20, 20, 20]

            # --- Subject ---
            TextInput:
                id: subject
                hint_text: "Bộ môn"
                multiline: False
                size_hint_y: None
                height: dp(60)
                font_size: "18sp"
                padding: [20, 20, 20, 20]

            # --- Degree ---
            TextInput:
                id: degree
                hint_text: "Học vị"
                multiline: False
                size_hint_y: None
                height: dp(60)
                font_size: "18sp"
                padding: [20, 20, 20, 20]

            Button:
                text: "Đăng ký"
                font_size: "20sp"
                bold: True
                background_color: 0.2, 0.5, 1, 1
                color: 1, 1, 1, 1
                size_hint_y: None
                height: dp(60)
                on_release: root.do_register(fullname.text, dob.text, teacher_id.text, address.text, username.text, password.text, subject.text, degree.text)

            Button:
                text: "Quay lại"
                font_size: "20sp"
                bold: True
                background_color: 0.6, 0, 0, 1
                color: 1, 1, 1, 1
                size_hint_y: None
                height: dp(60)
                on_release:
                    app.root.transition.direction = "right"
                    app.root.current = "login"

            Label:
                id: status
                text: ""
                color: 0.8, 0.2, 0.2, 1
